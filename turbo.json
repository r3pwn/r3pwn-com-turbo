{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "cms#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "REVALIDATE_SECRET",
        "GCS_CREDENTIALS",
        "GCS_BUCKET",
        "PUBLIC_MEDIA_PREFIX",
        "SITE_HOST"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "web#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "REVALIDATE_SECRET",
        "GCS_CREDENTIALS",
        "GCS_BUCKET",
        "PUBLIC_MEDIA_PREFIX",
        "SITE_HOST"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}